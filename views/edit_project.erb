<h2><%= @project.title %></h2>
<form action="/project/<%= @project.id()%>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="title">Edit project:</label>
  <input type="text" name="title" id="title">
  <button type="submit" class="btn btn-info">Update Project</button>
</form><br>

<form action="/delete/<%= @project.id()%>/project" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" class="btn btn-warning">Delete Project</button>
</form><br>
